<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            
            <div class="text-center">
                <h1>DevMatch Community</h1>
                <p>Welcome to the DevMatch community. Users must fill out a profile and be verified by an admin in order to be visible in the community.</p>
            </div>
            
            <ul class="list-unstyled">
                <% @users.each do |user| %>
                    <% if user.profile %>
                        <% if user.profile.verified or current_user.id == 1 %>
                            <li>
                                <div class="well row <%= cycle('', 'white-bg') %>">
                                    <div class="col-sm-4 text-center">
                                        <% if user.profile.avatar %>
                                            <%= link_to user do %>
                                                <%= image_tag user.profile.avatar.url, class: 'user-index-avatar' %>
                                            <% end %>
                                        <% end %>
                                    </div>
                                    
                                    <div>
                                        <%= link_to user do %>
                                            <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                                        <% end %>
                                        
                                        <p>
                                            <%= user.profile.job_title %>
                                            
                                            <% if current_user.id == 1 %>
                                                <% if user.profile.verified %>
                                                    <span class="label label-primary">VERIFIED</span>
                                                <% else %>
                                                    <span class="label label-default">UNVERIFIED</span>
                                                <% end %>
                                            <% end %>
                                            
                                            <% if user.plan_id == 2 %>
                                                <span class="label label-danger">PRO</span>
                                            <% end %>
                                        </p>
                                    </div>
                                </div>
                            </li>
                        <% end %>
                    <% end %>
                <% end %>
            </ul>
        </div>
    </div>
</div>
